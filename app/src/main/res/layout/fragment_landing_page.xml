<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5A5A5A">

    <include
        android:id="@+id/filters"
        layout="@layout/landing_page_filter_section"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/landing_section_margin"
        android:layout_marginTop="@dimen/landing_section_margin"
        android:layout_marginEnd="@dimen/landing_section_margin"
        android:layout_marginBottom="@dimen/landing_section_margin"
        app:layout_constraintBottom_toTopOf="@id/welcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/error"
        layout="@layout/landing_page_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/welcome"
        android:layout_width="0dp"
        android:layout_height="@dimen/landing_welcome_card_height"
        android:layout_marginStart="@dimen/landing_section_margin"
        android:layout_marginEnd="@dimen/landing_section_margin"
        app:cardCornerRadius="@dimen/landing_card_corner_radius"
        app:layout_constraintBottom_toTopOf="@+id/listing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filters">

    </com.google.android.material.card.MaterialCardView>

    <include
        android:id="@+id/listing"
        layout="@layout/landing_page_launch_listing"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/landing_section_margin"
        android:layout_marginTop="@dimen/landing_section_margin"
        android:layout_marginEnd="@dimen/landing_section_margin"
        android:layout_marginBottom="@dimen/landing_list_bottom_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>