<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/ivLaunchPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/launch_image_description"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/ivLaunchPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvMissionName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sample_mission_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvSiteName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sample_site_name_long"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:drawableStart="@drawable/ic_baseline_pin_drop_24"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_sm"/>

            <TextView
                android:id="@+id/tvLaunchDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_launch_date"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:drawableStart="@drawable/ic_baseline_calendar_today_24"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/margin_sm"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDetailHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/detailSubheader"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <TextView
                android:id="@+id/tvDetailParagraph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_launch_details"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLinksHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/LinksHeader"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvVideoLink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/video_link_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

                <ImageView
                    android:id="@+id/imageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/ic_link"
                    android:contentDescription="@string/external_link_icon_description"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvArticleLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/article_link_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>